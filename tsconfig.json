{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "importHelpers": true,
        "allowJs": true,
        "target": "es6",
        "lib": [ "es6", "dom" ],
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "jsx": "react",
        "jsxFactory": "render"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.js",
        "src/**/*.jsx"
    ]
}